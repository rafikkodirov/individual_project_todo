{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    // "typeRoots": ["node_modules/@types", "node_modules/firebase"],
    "types": ["firebase"],
    "jsx": "react-native",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ,],
      "../styles/styles": [
        "../styles/styles.ios",
        "../styles/styles.android"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "@/*.tsx",
    "node_modules/firebase/**/*",
    "declarations.d.ts",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
, "babel.config.js", "tailwind.config.ts" ]
}
